<form action='/<%= @story.id %>/update' method='post'>
	Title: <input type='text' name='title' value='<%= @story.title %>' /><br />
	Link: <input type='text' name='link' value='<%= @story.link %>' /><br />
	Body: <input type='text' name='body' value='<%= @story.body %>' /><br />
	<button type='submit'>Submit</button>
</form>