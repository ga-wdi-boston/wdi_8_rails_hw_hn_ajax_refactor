<form action="/<%= @story.id %>/update" method="post">
  <input type="text" name="title" value="<%= @story.title %>" placeholder="Title" />
  <input type="text" name="link" value="<%= @story.link %>" placeholder="Link"/>
  <textarea name="body" placeholder: "Comments">
    <%= @story.body %>
  </textarea>
  <button type="submit">Update</button>
</form>